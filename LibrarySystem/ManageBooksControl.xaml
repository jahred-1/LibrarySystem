<UserControl x:Class="LibrarySystem.ManageBooksControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#F8FAFC">
        <StackPanel Margin="40">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Manage Books" FontSize="26" FontWeight="Bold" Foreground="#0F172A" />
                    <TextBlock Text="Add, edit, or remove books from the collection" Foreground="#6B7280" Margin="0,8,0,0" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBox x:Name="SearchTextBox" Width="360" Height="34" VerticalContentAlignment="Center" Padding="8" Text="Search books by title, author, or ISBN..." GotFocus="SearchTextBox_GotFocus" LostFocus="SearchTextBox_LostFocus"/>
                    <Button Content="Search" Width="100" Height="34" Margin="8,0,0,0" Click="SearchButton_Click"/>
                    <Button Content="+ Add New Book" Width="140" Height="34" Margin="8,0,0,0" Background="#10B981" Foreground="White" Click="AddBookButton_Click"/>
                </StackPanel>
            </Grid>

            <Border BorderBrush="#E6E9EE" BorderThickness="1" CornerRadius="8" Margin="0,16,0,0" Background="White">
                <DataGrid x:Name="BooksDataGrid" AutoGenerateColumns="False" IsReadOnly="True" GridLinesVisibility="None" AlternatingRowBackground="#F8FAFC" HeadersVisibility="Column" CanUserAddRows="False" SelectionMode="Single" Height="480">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" />
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" />
                        <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="200" />
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="150" />
                        <DataGridTextColumn Header="Year" Binding="{Binding YearPublished}" Width="80" />
                        <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="160" />
                        <DataGridTextColumn Header="Available" Binding="{Binding AvailableCopies}" Width="80" />
                        <DataGridTextColumn Header="Total" Binding="{Binding TotalCopies}" Width="80" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>