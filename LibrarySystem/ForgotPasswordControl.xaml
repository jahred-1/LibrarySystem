<UserControl x:Class="LibrarySystem.ForgotPasswordControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F8FAFC">
    <Grid>
        <Border Background="White" CornerRadius="12" Padding="24" Width="520" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="#E6E9EE" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Forgot Password" FontSize="22" FontWeight="Bold" Foreground="#0F172A"/>
                <TextBlock Text="Enter your registered email below. We'll send a reset code you can use to set a new password." Foreground="#475569" Margin="0,8,0,20" TextWrapping="Wrap"/>

                <TextBlock Text="Email" FontSize="12" Foreground="#475569"/>
                <TextBox x:Name="ResetEmailTextBox" Height="36" Margin="0,6,0,12"/>

                <Button x:Name="RequestCodeButton" Content="Request Reset Code" Width="180" Height="36" Background="#10B981" Foreground="White" HorizontalAlignment="Left" Click="RequestCodeButton_Click"/>

                <Separator Margin="0,12,0,12"/>

                <TextBlock Text="Have a reset code? Enter it below along with your new password." Foreground="#475569" Margin="0,0,0,12"/>

                <TextBlock Text="Reset Code" FontSize="12" Foreground="#475569"/>
                <TextBox x:Name="ResetCodeTextBox" Height="36" Margin="0,6,0,12"/>

                <TextBlock Text="New Password" FontSize="12" Foreground="#475569"/>
                <PasswordBox x:Name="NewPasswordBox" Height="36" Margin="0,6,0,12"/>

                <TextBlock Text="Confirm New Password" FontSize="12" Foreground="#475569"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Height="36" Margin="0,6,0,16"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Reset Password Using Code" Width="220" Height="40" Background="#0ea5a4" Foreground="White" Click="ResetPasswordButton_Click"/>
                    <Button Content="Confirm" Width="90" Height="40" Margin="8,0,0,0" Click="ConfirmButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>