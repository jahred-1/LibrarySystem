<Window x:Class="LibrarySystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanMinimize">

    <Window.Resources>
        <!-- Animate swap to Sign Up -->
        <Storyboard x:Key="SwapToSignUp">
            <DoubleAnimation Storyboard.TargetName="LeftPanelTranslate"
                             Storyboard.TargetProperty="X"
                             To="450" Duration="0:0:0.5"/>
            <DoubleAnimation Storyboard.TargetName="RightPanelTranslate"
                             Storyboard.TargetProperty="X"
                             To="-450" Duration="0:0:0.5"/>
        </Storyboard>

        <!-- Animate back to Login -->
        <Storyboard x:Key="SwapToLogin">
            <DoubleAnimation Storyboard.TargetName="LeftPanelTranslate"
                             Storyboard.TargetProperty="X"
                             To="0" Duration="0:0:0.5"/>
            <DoubleAnimation Storyboard.TargetName="RightPanelTranslate"
                             Storyboard.TargetProperty="X"
                             To="0" Duration="0:0:0.5"/>
        </Storyboard>

        <!-- Password container spacing -->
        <Style x:Key="PasswordContainerStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0,5,0,10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#101010" Offset="0.1"/>
                <GradientStop Color="#1e293b" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- White container -->
        <Border Margin="60"
                CornerRadius="15"
                Background="#1e293b"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="900"
                Height="520"
                Effect="{DynamicResource DropShadow}">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Left Panel with Digital Book Background -->
                <Border Grid.Column="0"
                        CornerRadius="15,0,0,15"
                        Background="#0F0F0F"
                        Padding="5">
                    <Border.RenderTransform>
                        <TranslateTransform x:Name="LeftPanelTranslate" X="0"/>
                    </Border.RenderTransform>

                    <Grid>
                        <!-- Background Image -->
                        <Image Source="/Image/BOOKS.jpg"
                               Stretch="UniformToFill"
                               Opacity="100"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>

                        <!-- Overlay Content -->

                        <TextBlock Text="Quezon City University"
                          Foreground="White"
                          FontSize="32"
                          FontWeight="Bold"
                          TextAlignment="Center"
                          Margin="0,15,0,0"/>
                        
                            

                            <TextBlock Text="Library Management System"
                                       Foreground="White"
                                       FontSize="22"
                                       TextAlignment="Center"
                                       Margin="0,255,0,30"/>

                            <TextBlock Text="Your Gateway to Knowledge. Discover, Borrow, and Explore our Collection."
                                       Foreground="White"
                                       FontSize="14"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="20,460,20,0"/>
                       
                    </Grid>
                </Border>

                <!-- Right Panel with Login + SignUp Forms -->
                <Grid Grid.Column="1">
                    <Grid.RenderTransform>
                        <TranslateTransform x:Name="RightPanelTranslate" X="0"/>
                    </Grid.RenderTransform>

                    <!-- QCU Logo positioned at top right -->
                    <Image Source="/Image/QCU_Logo.png"
                           Height="65"
                           Width="65"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Right"
                           Margin="0,10,20,0"
                           Panel.ZIndex="2"/>

                    <!-- LOGIN FORM -->
                    <StackPanel x:Name="LoginForm" Margin="70,20" VerticalAlignment="Center">

                        <TextBlock Text="Welcome, QCUians!"
                         FontSize="26"
                         FontWeight="Bold"
                         Foreground="#F8F8F8"/>

                        <TextBlock Text=""
                         Margin="0,140,0,-50"/>
                        
                        <TextBlock Text="STUDENT ID / EMAIL" FontWeight="Bold" Foreground="#F8F8F8" FontSize="11"/>
                        <TextBox x:Name="LoginEmailTextBox" Height="32" Margin="0,8,0,15" Background="#F8F9FA" BorderBrush="#DADADA" Padding="5"/>

                        <TextBlock Text="PASSWORD" FontWeight="Bold" Foreground="#F8F8F8" FontSize="11" Margin="0,0,0,8"/>
                        <Grid Margin="0,0,0,10">
                            <!-- Hidden password -->
                            <PasswordBox x:Name="LoginPasswordBox"
                                         Height="32"
                                         Background="#F8F9FA"
                                         BorderBrush="#DADADA"
                                         Padding="5"
                                         VerticalContentAlignment="Center"/>

                            <!-- Visible password -->
                            <TextBox x:Name="LoginPasswordText"
                                     Height="32"
                                     Background="#F8F9FA"
                                     BorderBrush="#DADADA"
                                     Padding="5"
                                     VerticalContentAlignment="Center"
                                     Visibility="Collapsed"/>

                            <!-- Toggle button -->
                            <Button x:Name="LoginTogglePassword"
                                    Content="👁"
                                    Width="30"
                                    Height="30"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    Foreground="#0033A0"
                                    HorizontalAlignment="Right"
                                    Cursor="Hand"
                                    Click="LoginTogglePassword_Click"/>
                        </Grid>

                        <TextBlock Text="Forgot Password?" Foreground="Red" FontSize="12"
                                   HorizontalAlignment="Right" Cursor="Hand" Margin="0,0,0,20"
                                   MouseDown="ForgotPassword_Click"/>
                        <Button Content="LOGIN" 
                                Background="#0F0F0F"
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Bold"
                                Height="40"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="LoginButton1_Click"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,50,0,-50">
                            <TextBlock Text="Don't have an account?" Foreground="Gray" FontSize="12"/>
                            <TextBlock Text=" Sign Up" Foreground="Red" FontWeight="Bold" Cursor="Hand" FontSize="12"
                                       MouseDown="SignUp_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- SIGN UP FORM (hidden initially) -->
                    <StackPanel x:Name="SignUpForm" Visibility="Collapsed" Margin="70,20" VerticalAlignment="Center">
                        <TextBlock Text="Create Account"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#F8F8F8"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="FULL NAME" FontWeight="Bold" Foreground="#F8F8F8" FontSize="9"/>
                        <TextBox x:Name="SignUpFullNameTextBox" Height="30" Margin="0,5,0,8" Background="#F8F9FA" BorderBrush="#DADADA" Padding="5"/>

                        <TextBlock Text="STUDENT ID" FontWeight="Bold" Foreground="#F8F8F8" FontSize="11"/>
                        <TextBox x:Name="SignUpStudentIdTextBox" Height="30" Margin="0,5,0,8" Background="#F8F9FA" BorderBrush="#DADADA" Padding="5"/>

                        <TextBlock Text="EMAIL" FontWeight="Bold" Foreground="#F8F8F8" FontSize="11"/>
                        <TextBox x:Name="SignUpEmailTextBox" Height="30" Margin="0,5,0,8" Background="#F8F9FA" BorderBrush="#DADADA" Padding="5"/>

                        <TextBlock Text="COURSE" FontWeight="Bold" Foreground="#F8F8F8" FontSize="11"/>
                        <TextBox x:Name="SignUpCourseTextBox" Height="30" Margin="0,5,0,8" Background="#F8F9FA" BorderBrush="#DADADA" Padding="5"/>

                        <TextBlock Text="SECTION" FontWeight="Bold" Foreground="#F8F8F8" FontSize="11"/>
                        <TextBox x:Name="SignUpSectionTextBox" Height="30" Margin="0,5,0,8" Background="#F8F9FA" BorderBrush="#DADADA" Padding="5"/>

                        <TextBlock Text="PASSWORD" FontWeight="Bold" Foreground="#F8F8F8" FontSize="11"/>
                        <Grid Margin="0,5,0,8">
                            <!-- Hidden password -->
                            <PasswordBox x:Name="SignUpPasswordBox"
                                         Height="30"
                                         Background="#F8F9FA"
                                         BorderBrush="#DADADA"
                                         Padding="5"
                                         VerticalContentAlignment="Center"/>

                            <!-- Visible password -->
                            <TextBox x:Name="SignUpPasswordText"
                                     Height="30"
                                     Background="#F8F9FA"
                                     BorderBrush="#DADADA"
                                     Padding="5"
                                     VerticalContentAlignment="Center"
                                     Visibility="Collapsed"/>

                            <!-- Toggle button -->
                            <Button x:Name="SignUpTogglePassword"
                                    Content="👁"
                                    Width="30"
                                    Height="28"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    Foreground="#0033A0"
                                    HorizontalAlignment="Right"
                                    Cursor="Hand"
                                    Click="SignUpTogglePassword_Click"/>
                        </Grid>

                        <Button Content="CREATE ACCOUNT"
                                Background="#0F0F0F"
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Bold"
                                Height="40"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,8,0,12"
                                Click="CreateAccount_Click"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Already have an account?" Foreground="Gray" FontSize="12"/>
                            <TextBlock Text=" Login" Foreground="Red" FontWeight="Bold" Cursor="Hand" FontSize="12"
                                   MouseDown="Login_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
