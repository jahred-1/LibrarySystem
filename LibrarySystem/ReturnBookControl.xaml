<UserControl x:Class="LibrarySystem.ReturnBookControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="White">
        <StackPanel Margin="50" HorizontalAlignment="Center" Width="700">
            <TextBlock Text="🔄 Return Book" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="#F57C00" 
                       Margin="0,0,0,30"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Process book returns and check for late fees" 
                       FontSize="16" 
                       Foreground="#666"
                       Margin="0,0,0,40"
                       HorizontalAlignment="Center"/>

            <!-- Return Book Form -->
            <Border BorderBrush="#DDD" BorderThickness="2" CornerRadius="10" Padding="40">
                <StackPanel>
                    <!-- Borrow Record ID -->
                    <TextBlock Text="Borrow Record ID" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBox x:Name="RecordIdTextBox" Height="40" FontSize="16" Padding="10" Margin="0,0,0,20" TextChanged="RecordIdTextBox_TextChanged"/>

                    <!-- Late Fee Display -->
                    <Border Background="#FFF3E0" Padding="15" CornerRadius="5" Margin="0,0,0,30">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠️ Late Fee:" FontSize="16" FontWeight="SemiBold" Margin="0,0,10,0"/>
                            <TextBlock x:Name="LateFeeTextBlock" Text="₱0.00" FontSize="16" FontWeight="Bold" Foreground="#F57C00"/>
                        </StackPanel>
                    </Border>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Return Book" 
                                Width="150" Height="45" 
                                Background="#F57C00" 
                                Foreground="White" 
                                BorderThickness="0" 
                                FontSize="16"
                                FontWeight="SemiBold"
                                Margin="0,0,15,0"
                                Cursor="Hand"
                                Click="ReturnBookButton_Click"/>
                        <Button Content="Clear" 
                                Width="150" Height="45" 
                                Background="#999" 
                                Foreground="White" 
                                BorderThickness="0" 
                                FontSize="16"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Click="ClearButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>