<UserControl x:Class="LibrarySystem.MyProfileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F7FA">

    <UserControl.Resources>
        <Style x:Key="ProfileCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#1A000000" BlurRadius="8" ShadowDepth="0" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        
        <Style x:Key="InfoField" TargetType="Border">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#F1F5F9"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E2E8F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column - Profile Info -->
            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                <!-- Profile Header -->
                <Border Style="{StaticResource ProfileCard}">
                    <StackPanel>
                        <Border Width="100" Height="100" CornerRadius="50" 
                                Background="#F1F5F9" BorderBrush="#2563EB" BorderThickness="3"
                                HorizontalAlignment="Center">
                            <TextBlock x:Name="InitialsText" Text="??" FontSize="40" FontWeight="Bold" 
                                       Foreground="#1E293B" VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <TextBlock x:Name="StudentNameText" FontSize="22" FontWeight="Bold" 
                                   Foreground="#1E293B" HorizontalAlignment="Center" Margin="0,16,0,0"/>
                        <TextBlock x:Name="StudentIdText" FontSize="14" 
                                   Foreground="#64748B" HorizontalAlignment="Center" Margin="0,4,0,0"/>

                        <Border Background="#2563EB" CornerRadius="8" Padding="10,5" 
                                HorizontalAlignment="Center" Margin="0,16,0,0">
                            <TextBlock Text="Active Member" FontSize="12" Foreground="White" 
                                       FontWeight="SemiBold"/>
                        </Border>

                        <Button x:Name="EditProfileButton" Content="Edit Profile" Style="{StaticResource SecondaryButton}" 
                                Margin="0,20,0,0" Click="EditProfileButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- Personal Information -->
                <Border Style="{StaticResource ProfileCard}">
                    <StackPanel>
                        <TextBlock Text="Personal Information" FontSize="18" FontWeight="Bold" 
                                   Foreground="#1E293B" Margin="0,0,0,20"/>

                        <!-- Email -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Email Address" FontSize="12" Foreground="#64748B" 
                                       Margin="0,0,0,8"/>
                            <Border Style="{StaticResource InfoField}">
                                <TextBlock x:Name="EmailText" FontSize="14" 
                                           Foreground="#1E293B"/>
                            </Border>
                        </StackPanel>

                        <!-- Phone -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Course" FontSize="12" Foreground="#64748B" 
                                       Margin="0,0,0,8"/>
                            <Border Style="{StaticResource InfoField}">
                                <TextBlock x:Name="CourseText" FontSize="14" Foreground="#1E293B"/>
                            </Border>
                        </StackPanel>

                        <!-- Department -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Section" FontSize="12" Foreground="#64748B" 
                                       Margin="0,0,0,8"/>
                            <Border Style="{StaticResource InfoField}">
                                <TextBlock x:Name="SectionText" FontSize="14" Foreground="#1E293B"/>
                            </Border>
                        </StackPanel>

           
                    </StackPanel>
                </Border>

                <!-- Account Settings -->
                <Border Style="{StaticResource ProfileCard}">
                    <StackPanel>
                        <TextBlock Text="Account Settings" FontSize="18" FontWeight="Bold" 
                                   Foreground="#1E293B" Margin="0,0,0,12"/>

                        <Button x:Name="ChangePasswordButton" Content="Change Password" Background="Transparent" 
                                Foreground="#1E293B" Height="44" BorderThickness="0" 
                                FontSize="14" Cursor="Hand" HorizontalContentAlignment="Left"
                                Padding="0,0,0,0" Margin="0,0,0,8" Click="ChangePasswordButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Left" 
                                                                    VerticalAlignment="Center" Margin="0,0,0,0"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F8FAFC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="NotificationPreferencesButton" Content="Notification Preferences" Background="Transparent" 
                                Foreground="#1E293B" Height="44" BorderThickness="0" 
                                FontSize="14" Cursor="Hand" HorizontalContentAlignment="Left"
                                Padding="0,0,0,0" Margin="0,0,0,8" Click="NotificationPreferencesButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Left" 
                                                                    VerticalAlignment="Center" Margin="0,0,0,0"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F8FAFC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="PrivacySettingsButton" Content="Privacy Settings" Background="Transparent" 
                                Foreground="#1E293B" Height="44" BorderThickness="0" 
                                FontSize="14" Cursor="Hand" HorizontalContentAlignment="Left"
                                Padding="0,0,0,0" Click="PrivacySettingsButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Left" 
                                                                    VerticalAlignment="Center" Margin="0,0,0,0"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F8FAFC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Right Column - Statistics & Activity -->
            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                <!-- Library Statistics -->
                <Border Style="{StaticResource ProfileCard}">
                    <StackPanel>
                        <TextBlock Text="Library Statistics" FontSize="18" FontWeight="Bold" 
                                   Foreground="#1E293B" Margin="0,0,0,16"/>

                        <!-- Total Books Borrowed -->
                        <Border Style="{StaticResource StatCard}">
                            <Grid>
                                <StackPanel>
                                    <TextBlock Text="Total Books Borrowed" FontSize="13" 
                                               Foreground="#64748B"/>
                                    <TextBlock x:Name="TotalBorrowedText" Text="0" FontSize="28" FontWeight="Bold" 
                                               Foreground="#1E293B" Margin="0,6,0,0"/>
                                </StackPanel>
                                <TextBlock Text="📚" FontSize="32" Opacity="0.3" 
                                           HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Currently Borrowed -->
                        <Border Style="{StaticResource StatCard}">
                            <Grid>
                                <StackPanel>
                                    <TextBlock Text="Currently Borrowed" FontSize="13" 
                                               Foreground="#64748B"/>
                                    <TextBlock x:Name="CurrentlyBorrowedProfileText" Text="0" FontSize="28" FontWeight="Bold" 
                                               Foreground="#F59E0B" Margin="0,6,0,0"/>
                                </StackPanel>
                                <TextBlock Text="📖" FontSize="32" Opacity="0.3" 
                                           HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- On-Time Returns -->
                        <Border Style="{StaticResource StatCard}">
                            <Grid>
                                <StackPanel>
                                    <TextBlock Text="On-Time Returns" FontSize="13" 
                                               Foreground="#64748B"/>
                                    <TextBlock x:Name="OnTimeReturnsText" Text="0%" FontSize="28" FontWeight="Bold" 
                                               Foreground="#10B981" Margin="0,6,0,0"/>
                                </StackPanel>
                                <TextBlock Text="✅" FontSize="32" Opacity="0.3" 
                                           HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Member Since -->
                <Border Style="{StaticResource ProfileCard}">
                    <StackPanel>
                        <TextBlock Text="Membership Details" FontSize="18" FontWeight="Bold" 
                                   Foreground="#1E293B" Margin="0,0,0,16"/>

                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Member Since" FontSize="13" Foreground="#64748B"/>
                            <TextBlock x:Name="MemberSinceText" FontSize="15" FontWeight="SemiBold" 
                                       Foreground="#1E293B" Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Membership Status" FontSize="13" Foreground="#64748B"/>
                            <TextBlock x:Name="MembershipStatusText" FontSize="15" FontWeight="SemiBold" 
                                       Foreground="#10B981" Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Borrowing Limit" FontSize="13" Foreground="#64748B"/>
                            <TextBlock x:Name="BorrowingLimitText" FontSize="15" FontWeight="SemiBold" 
                                       Foreground="#1E293B" Margin="0,4,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Reading Stats -->
                <Border Style="{StaticResource ProfileCard}">
                    <StackPanel>
                        <TextBlock Text="Reading Activity" FontSize="18" FontWeight="Bold" 
                                   Foreground="#1E293B" Margin="0,0,0,16"/>

                        <StackPanel Margin="0,0,0,16">
                            <Grid>
                                <TextBlock Text="This Month" FontSize="13" Foreground="#64748B"/>
                                <TextBlock x:Name="ThisMonthText" FontSize="13" Foreground="#1E293B" 
                                           FontWeight="SemiBold" HorizontalAlignment="Right"/>
                            </Grid>
                            <ProgressBar x:Name="ThisMonthProgress" Height="6" Margin="0,8,0,0" 
                                         Background="#E2E8F0" Foreground="#2563EB" BorderThickness="0"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,16">
                            <Grid>
                                <TextBlock Text="This Year" FontSize="13" Foreground="#64748B"/>
                                <TextBlock x:Name="ThisYearText" FontSize="13" Foreground="#1E293B" 
                                           FontWeight="SemiBold" HorizontalAlignment="Right"/>
                            </Grid>
                            <ProgressBar x:Name="ThisYearProgress" Height="6" Margin="0,8,0,0" 
                                         Background="#E2E8F0" Foreground="#10B981" BorderThickness="0"/>
                        </StackPanel>

                        <Border Background="#F8FAFC" CornerRadius="8" Padding="14" 
                                BorderThickness="1" BorderBrush="#E2E8F0">
                            <StackPanel>
                                <TextBlock Text="Favorite Genre" FontSize="13" Foreground="#64748B"/>
                                <TextBlock x:Name="FavoriteGenreText" FontSize="15" FontWeight="SemiBold" 
                                           Foreground="#1E293B" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>