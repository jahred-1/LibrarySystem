<UserControl x:Class="LibrarySystem.MyBorrowedBooksControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F7FA">

    <UserControl.Resources>
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#1A000000" BlurRadius="8" ShadowDepth="0" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="BookCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#1A000000" BlurRadius="8" ShadowDepth="0" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#F1F5F9"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E2E8F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel>
            <!-- Header Stats -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="Currently Borrowed" FontSize="13" Foreground="#64748B"/>
                        <TextBlock x:Name="CurrentlyBorrowedText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#1E293B" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="Due This Week" FontSize="13" Foreground="#64748B"/>
                        <TextBlock x:Name="DueThisWeekText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#F59E0B" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="Overdue" FontSize="13" Foreground="#64748B"/>
                        <TextBlock x:Name="OverdueText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#10B981" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Section Title -->
            <TextBlock Text="Active Loans" FontSize="20" FontWeight="Bold" 
                       Foreground="#1E293B" Margin="0,0,0,16"/>

            <!-- Borrowed Books (Loaded Dynamically) -->
            <ItemsControl x:Name="BorrowedBooksItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource BookCard}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#F1F5F9" CornerRadius="8" Width="70" Height="100">
                                    <TextBlock Text="📖" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.6"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding BookTitle}" FontSize="16" FontWeight="Bold" Foreground="#1E293B"/>
                                    <TextBlock Text="{Binding BookAuthor}" FontSize="13" Foreground="#64748B" Margin="0,4,0,0"/>
                                    <TextBlock Text="{Binding BookISBN}" FontSize="12" Foreground="#94A3B8" Margin="0,4,0,0"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                        <TextBlock Text="Borrowed:" FontSize="12" Foreground="#64748B" Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding BorrowedDate}" FontSize="12" Foreground="#1E293B" FontWeight="SemiBold"/>
                                        <TextBlock Text="•" FontSize="12" Foreground="#CBD5E1" Margin="8,0"/>
                                        <TextBlock Text="Due:" FontSize="12" Foreground="#64748B" Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding DueDate}" FontSize="12" Foreground="{Binding DueDateColor}" FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <ProgressBar Value="{Binding ProgressValue}" Height="6" Margin="0,12,0,4" 
                                                 Background="#E2E8F0" Foreground="{Binding ProgressColor}" BorderThickness="0"/>
                                    <TextBlock Text="{Binding DaysRemaining}" FontSize="11" Foreground="{Binding DaysRemainingColor}" FontWeight="{Binding DaysRemainingWeight}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" VerticalAlignment="Center" Width="100">
                                    <Button Content="Renew" Style="{StaticResource PrimaryButton}" 
                                            Margin="0,0,0,8" Click="RenewButton_Click"
                                            Tag="{Binding RecordId}"/>
                                    <Button Content="Return" Style="{StaticResource SecondaryButton}" 
                                            Click="ReturnButton_Click"
                                            Tag="{Binding RecordId}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>