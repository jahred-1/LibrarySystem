<Window x:Class="LibrarySystem.AdminPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Library Management System" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanMinimize">

    <!-- ================= WINDOW RESOURCES ================= -->
    <Window.Resources>

        <!-- Menu Item Style -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#B0B0B0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0,0,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Left"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A4A4A"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Active Menu Item Style -->
        <Style x:Key="ActiveMenuButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Background" Value="#0541A5"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="blue"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Section Header -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#707070"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="15,8,0,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

    </Window.Resources>


    <!-- =================== LAYOUT START =================== -->
    <Grid x:Name="MainGrid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" x:Name="SidebarColumn"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ================= SIDEBAR ================= -->
        <Border Grid.Column="0" Background="#2D2D2D" BorderThickness="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Background="#1E1E1E" Height="50" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Collapse / Expand Button -->
                    <Button x:Name="ToggleSidebarButton"
                            Content="☰"
                            Width="30" Height="30"
                            Grid.Column="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="10,0,8,0"
                            Background="#1E1E1E"
                            Foreground="White"
                            BorderThickness="0"
                            Click="ToggleSidebarButton_Click"/>

                    <!-- Title -->
                    <TextBlock x:Name="SidebarTitle"
                               Text="Admin Portal"
                               Foreground="White"
                               Grid.Column="1"
                               FontSize="13"
                               FontWeight="Bold" 
                               Margin="35,0,0,0"
                               VerticalAlignment="Center"/>

                </Grid>

                <!-- MENU -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">

                    <StackPanel x:Name="SidebarStackPanel" Margin="0,5,0,0">

                        <!-- ============= QCU LOGO AND ADMIN SECTION ============= -->
                        <StackPanel x:Name="LogoSection" HorizontalAlignment="Center" Margin="0,20,0,20">
                            <!-- Logo with circular border -->
                            <Border Width="100" Height="100" 
                                    CornerRadius="50" 
                                    Background="White" 
                                    BorderBrush="#B8860B" 
                                    BorderThickness="3"
                                    Margin="0,0,0,12">
                                <Image Source="Image/QCU_Logo.png" 
                                       Stretch="Uniform"
                                       Margin="8"/>
                            </Border>

                            <!-- Library Admin Text -->
                            <TextBlock Text="Library Admin" 
                                       Foreground="#B0B0B0" 
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"/>
                        </StackPanel>
                        <!-- ============= END LOGO SECTION ============= -->

                        <!-- Dashboard -->
                        <Button Style="{StaticResource MenuButtonStyle}" Click="Dashboard_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Dashboard" FontSize="16"/>
                            </StackPanel>
                        </Button>

                        <!-- Manage Books -->
                        <Button Style="{StaticResource MenuButtonStyle}" Click="ManageBooks_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📚" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Manage Books" FontSize="16"/>
                            </StackPanel>
                        </Button>

                        <!-- Manage Students -->
                        <Button Style="{StaticResource MenuButtonStyle}" Click="ManageStudents_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👤" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Manage Students" FontSize="16"/>
                            </StackPanel>
                        </Button>

                        <!-- Reset Students Password -->
                        <Button Style="{StaticResource MenuButtonStyle}" Click="ResetStudentsPassword_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔑" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Reset Students Password" FontSize="16"/>
                            </StackPanel>
                        </Button>

                        <!-- Issue Book -->
                        <Button Style="{StaticResource MenuButtonStyle}" Click="IssueBook_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📖" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Issue Book" FontSize="16"/>
                            </StackPanel>
                        </Button>

                        <!-- Return Book -->
                        <Button Style="{StaticResource MenuButtonStyle}" Click="ReturnBook_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔄" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Return Book" FontSize="16"/>
                            </StackPanel>
                        </Button>

                        <!-- View Records -->
                        <Button Style="{StaticResource MenuButtonStyle}" Click="ViewRecords_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📋" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="View Records" FontSize="16"/>
                            </StackPanel>
                        </Button>

                        <!-- View Issued Books -->
                        <Button Style="{StaticResource MenuButtonStyle}" Click="ViewIssuedBooks_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📕" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="View Issued Books" FontSize="16"/>
                            </StackPanel>
                        </Button>

                        <!-- Defaulter List -->
                        <Button Style="{StaticResource MenuButtonStyle}" Click="DefaulterList_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Defaulter List" FontSize="16"/>
                            </StackPanel>
                        </Button>

                        <!-- Logout -->
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Margin="0,10,0,10"
                                Background="#CD1946"
                                Click="Logout_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="▐➜" FontSize="16" Margin="-5,0,12,0"/>
                                <TextBlock Text="Logout" FontSize="16" Foreground="White"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>

                </ScrollViewer>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Column="1" Background="#F5F5F5">
            <ContentControl x:Name="ContentArea"/>
        </Grid>

    </Grid>
</Window>