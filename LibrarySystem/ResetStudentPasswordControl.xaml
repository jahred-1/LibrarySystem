<UserControl x:Class="LibrarySystem.ResetStudentPasswordControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="500" MinHeight="300" Background="#F8FAFC">
    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20" Margin="20" BorderBrush="#E6E9EE" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Reset Student Password" FontSize="20" FontWeight="Bold" Foreground="#0F172A"/>
                <TextBlock Text="Search by student email or ID, then set a new password." Foreground="#6B7280" Margin="0,6,0,12"/>

                <StackPanel Orientation="Horizontal" Margin="0,6,0,12">
                    <TextBox x:Name="SearchBox" Width="320" Height="34" VerticalContentAlignment="Center" ToolTip="Enter email or student ID" />
                    <Button Content="Find" Width="90" Height="34" Margin="8,0,0,0" Click="FindButton_Click" />
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,6,0,12">
                    <TextBlock Text="Student:" FontSize="12" Foreground="#475569"/>
                    <TextBlock x:Name="StudentInfoText" Text="Not selected" FontWeight="SemiBold" Margin="0,4,0,0"/>
                </StackPanel>

                <TextBlock Text="New Password" FontSize="12" Foreground="#475569" />
                <PasswordBox x:Name="NewPasswordBox" Height="34" Margin="0,6,0,12" />

                <TextBlock Text="Confirm Password" FontSize="12" Foreground="#475569" />
                <PasswordBox x:Name="ConfirmPasswordBox" Height="34" Margin="0,6,0,16" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="ChangePasswordButton" Content="Change Password" Width="140" Height="36" Background="#0ea5a4" Foreground="White" Click="ChangePasswordButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>