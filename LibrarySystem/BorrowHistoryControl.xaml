<UserControl x:Class="LibrarySystem.BorrowHistoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#F8FAFC">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="16" Margin="0,0,0,12" BorderBrush="#E6E9EE" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Borrow History" FontSize="18" FontWeight="Bold" Foreground="#0F172A"/>
                    <TextBlock Text="Your past borrowed records" FontSize="12" Foreground="#6B7280"/>
                </StackPanel>

                <!-- reserved for potential actions on the right -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <!-- empty for now -->
                </StackPanel>
            </Grid>
        </Border>

        <!-- History List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,0,12">
                <ItemsControl x:Name="HistoryItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="8" Padding="14" Margin="0,0,0,12" BorderBrush="#E6E9EE" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Width="56" Height="80" Background="#F3F4F6" CornerRadius="6" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="📚" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="16,0,0,0">
                                        <TextBlock Text="{Binding BookTitle}" FontSize="14" FontWeight="SemiBold" Foreground="#0F172A"/>
                                        <TextBlock Text="{Binding BookAuthor}" FontSize="12" Foreground="#6B7280" Margin="0,6,0,0"/>

                                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                            <TextBlock Text="Borrowed:" FontSize="11" Foreground="#9CA3AF" Margin="0,0,6,0"/>
                                            <TextBlock Text="{Binding BorrowedDate}" FontSize="11" Foreground="#0F172A"/>

                                            <TextBlock Text="  •  " Foreground="#E5E7EB"/>

                                            <TextBlock Text="Returned:" FontSize="11" Foreground="#9CA3AF" Margin="6,0,6,0"/>
                                            <TextBlock Text="{Binding ReturnedDate}" FontSize="11" Foreground="#0F172A"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                        <Border Background="#F8FAFC" CornerRadius="6" Padding="8" BorderBrush="#E6E9EE" BorderThickness="1">
                                            <TextBlock Text="{Binding StatusText}" FontSize="12" FontWeight="SemiBold" Foreground="#0F172A"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>