<UserControl x:Class="LibrarySystem.IssueBookControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="White">
        <StackPanel Margin="50" HorizontalAlignment="Center" Width="700">
            <TextBlock Text="📖 Issue Book" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="#1976D2" 
                       Margin="0,0,0,30"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Fill in the details to issue a book to a student" 
                       FontSize="16" 
                       Foreground="#666"
                       Margin="0,0,0,40"
                       HorizontalAlignment="Center"/>

            <!-- Issue Book Form -->
            <Border BorderBrush="#DDD" BorderThickness="2" CornerRadius="10" Padding="40">
                <StackPanel>
                    <!-- Student ID -->
                    <TextBlock Text="Student ID" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBox x:Name="StudentIdTextBox" Height="40" FontSize="16" Padding="10" Margin="0,0,0,20"/>

                    <!-- Book ID -->
                    <TextBlock Text="Book ID" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBox x:Name="BookIdTextBox" Height="40" FontSize="16" Padding="10" Margin="0,0,0,20"/>

                    <!-- Days -->
                    <TextBlock Text="Days (default: 14)" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBox x:Name="DaysTextBox" Height="40" FontSize="16" Padding="10" Text="14" Margin="0,0,0,30"/>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Issue Book" 
                                Width="150" Height="45" 
                                Background="#1976D2" 
                                Foreground="White" 
                                BorderThickness="0" 
                                FontSize="16"
                                FontWeight="SemiBold"
                                Margin="0,0,15,0"
                                Cursor="Hand"
                                Click="IssueBookButton_Click"/>
                        <Button Content="Clear" 
                                Width="150" Height="45" 
                                Background="#999" 
                                Foreground="White" 
                                BorderThickness="0" 
                                FontSize="16"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Click="ClearButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>