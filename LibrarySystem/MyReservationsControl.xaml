<UserControl x:Class="LibrarySystem.MyReservationsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F7FA">

    <UserControl.Resources>
        <!-- Card shadow resource used by header -->
        <DropShadowEffect x:Key="CardShadow" Color="#1A000000" BlurRadius="8" ShadowDepth="0" Opacity="0.08"/>
        <Style x:Key="ReservationCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#1A000000" BlurRadius="8" ShadowDepth="0" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#F1F5F9"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E2E8F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel>
            <!-- Header Info -->
            <Border Background="White" CornerRadius="16" Padding="24" Margin="0,0,0,24"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="Active Reservations" FontSize="22" FontWeight="Bold" Foreground="#1E293B"/>
                        <TextBlock Text="Manage your book reservations and pickup notifications" 
                                   FontSize="14" Foreground="#64748B" Margin="0,8,0,0"/>
                    </StackPanel>

                    <Border Background="#2563EB" CornerRadius="20" Padding="12,6" 
                            HorizontalAlignment="Right" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="ActiveReservationsText" Text="0" FontSize="18" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Active" FontSize="13" Foreground="White" 
                                       Margin="6,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Reservations will be loaded dynamically -->
            <ItemsControl x:Name="ReservationsItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ReservationCard}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#F1F5F9" CornerRadius="8" Width="70" Height="100">
                                    <TextBlock Text="📚" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.6"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                                    <Border Background="{Binding StatusColor}" CornerRadius="6" Padding="8,4" 
                                            HorizontalAlignment="Left" Margin="0,0,0,12">
                                        <TextBlock Text="{Binding StatusText}" FontSize="11" Foreground="White" FontWeight="Bold"/>
                                    </Border>

                                    <TextBlock Text="{Binding BookTitle}" FontSize="17" FontWeight="Bold" Foreground="#1E293B"/>
                                    <TextBlock Text="{Binding BookAuthor}" FontSize="13" Foreground="#64748B" Margin="0,4,0,0"/>
                                    <TextBlock Text="{Binding BookISBN}" FontSize="12" Foreground="#94A3B8" Margin="0,4,0,0"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                        <Border Background="#F8FAFC" CornerRadius="6" Padding="10,6" Margin="0,0,12,0" 
                                                BorderThickness="1" BorderBrush="#E2E8F0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="📅" FontSize="13" Margin="0,0,6,0"/>
                                                <TextBlock Text="{Binding ReservedDate}" FontSize="12" Foreground="#1E293B"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="#F8FAFC" CornerRadius="6" Padding="10,6"
                                                BorderThickness="1" BorderBrush="#E2E8F0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="⏰" FontSize="13" Margin="0,0,6,0"/>
                                                <TextBlock Text="{Binding HoldUntil}" FontSize="12" Foreground="#1E293B"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="2" VerticalAlignment="Center" Width="120">
                                    <Button Content="Pick Up" Style="{StaticResource PrimaryButton}" 
                                            Margin="0,0,0,8" Click="PickUpButton_Click"
                                            IsEnabled="{Binding CanPickUp}"
                                            Tag="{Binding ReservationId}"/>
                                    <Button Content="Cancel" Style="{StaticResource SecondaryButton}" 
                                            Click="CancelReservationButton_Click"
                                            Tag="{Binding ReservationId}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>