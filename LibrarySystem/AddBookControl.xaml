<UserControl x:Class="LibrarySystem.AddBookControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="600" MinHeight="480" Background="#F8FAFC">
    <Grid Margin="12">
        <Border Background="White" CornerRadius="10" Padding="20" BorderBrush="#E6E9EE" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Add New Book" FontSize="20" FontWeight="Bold" Foreground="#0F172A"/>
                <Grid Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                        <TextBlock Text="Title" FontSize="12" Foreground="#475569"/>
                        <TextBox x:Name="TitleTextBox" Height="34" Margin="0,6,0,12" />

                        <TextBlock Text="Author" FontSize="12" Foreground="#475569"/>
                        <TextBox x:Name="AuthorTextBox" Height="34" Margin="0,6,0,12" />

                        <TextBlock Text="Category" FontSize="12" Foreground="#475569"/>
                        <ComboBox x:Name="CategoryComboBox" Height="34" Margin="0,6,0,12" IsEditable="True"/>

                        <TextBlock Text="Year Published" FontSize="12" Foreground="#475569"/>
                        <TextBox x:Name="YearTextBox" Height="34" Margin="0,6,0,12" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                        <TextBlock Text="ISBN" FontSize="12" Foreground="#475569"/>
                        <TextBox x:Name="ISBNTextBox" Height="34" Margin="0,6,0,12" />

                        <TextBlock Text="Copies Available" FontSize="12" Foreground="#475569"/>
                        <TextBox x:Name="CopiesTextBox" Height="34" Margin="0,6,0,12" />

                        <TextBlock Text="Description" FontSize="12" Foreground="#475569"/>
                        <TextBox x:Name="DescriptionTextBox" Height="150" Margin="0,6,0,12" TextWrapping="Wrap" AcceptsReturn="True"/>
                    </StackPanel>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                    <Button x:Name="AddButton" Content="Add Book" Width="120" Height="36" Background="#0ea5a4" Foreground="White" Click="AddButton_Click"/>
                    <Button x:Name="CancelButton" Content="Cancel" Width="90" Height="36" Margin="10,0,0,0" Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>