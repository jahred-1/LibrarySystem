<UserControl x:Class="LibrarySystem.DashboardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F8F9FA">

    <Grid>
        <!-- Row Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Top Header -->
        <Border Grid.Row="0" Background="White" Padding="40,30" 
                BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
            <StackPanel>
                <TextBlock Text="📊 Dashboard" 
                           FontSize="36" 
                           FontWeight="Bold" 
                           Foreground="#1A237E"/>
                <TextBlock Text="Welcome to QCU Library Management System" 
                           FontSize="16" 
                           Foreground="#666"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,30">

                <!-- Statistics Cards -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Books -->
                    <Border Grid.Column="0" Background="White" 
                            Padding="25" Margin="0,0,15,0"
                            CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.1" 
                                              BlurRadius="15" ShadowDepth="2"/>
                        </Border.Effect>
                        <StackPanel>
                            <Border Background="#E3F2FD" Width="60" Height="60" 
                                    CornerRadius="30" HorizontalAlignment="Left">
                                <TextBlock Text="📚" FontSize="32" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock x:Name="TotalBooksText" Text="0" FontSize="32" 
                                       FontWeight="Bold" Foreground="#1976D2" 
                                       Margin="0,15,0,5"/>
                            <TextBlock Text="Total Books" FontSize="14" 
                                       Foreground="#666"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Students -->
                    <Border Grid.Column="1" Background="White" 
                            Padding="25" Margin="0,0,15,0"
                            CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.1" 
                                              BlurRadius="15" ShadowDepth="2"/>
                        </Border.Effect>
                        <StackPanel>
                            <Border Background="#F3E5F5" Width="60" Height="60" 
                                    CornerRadius="30" HorizontalAlignment="Left">
                                <TextBlock Text="👥" FontSize="32" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock x:Name="TotalStudentsText" Text="0" FontSize="32" 
                                       FontWeight="Bold" Foreground="#7B1FA2" 
                                       Margin="0,15,0,5"/>
                            <TextBlock Text="Total Students" FontSize="14" 
                                       Foreground="#666"/>
                        </StackPanel>
                    </Border>

                    <!-- Books Issued -->
                    <Border Grid.Column="2" Background="White" 
                            Padding="25" Margin="0,0,15,0"
                            CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.1" 
                                              BlurRadius="15" ShadowDepth="2"/>
                        </Border.Effect>
                        <StackPanel>
                            <Border Background="#E8F5E9" Width="60" Height="60" 
                                    CornerRadius="30" HorizontalAlignment="Left">
                                <TextBlock Text="📖" FontSize="32" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock x:Name="BooksIssuedText" Text="0" FontSize="32" 
                                       FontWeight="Bold" Foreground="#388E3C" 
                                       Margin="0,15,0,5"/>
                            <TextBlock Text="Books Issued" FontSize="14" 
                                       Foreground="#666"/>
                        </StackPanel>
                    </Border>

                    <!-- Overdue Books -->
                    <Border Grid.Column="3" Background="White" 
                            Padding="25"
                            CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.1" 
                                              BlurRadius="15" ShadowDepth="2"/>
                        </Border.Effect>
                        <StackPanel>
                            <Border Background="#FFEBEE" Width="60" Height="60" 
                                    CornerRadius="30" HorizontalAlignment="Left">
                                <TextBlock Text="⚠️" FontSize="32" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock x:Name="OverdueBooksText" Text="0" FontSize="32" 
                                       FontWeight="Bold" Foreground="#D32F2F" 
                                       Margin="0,15,0,5"/>
                            <TextBlock Text="Overdue Books" FontSize="14" 
                                       Foreground="#666"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Recent Activity Section -->
                <Border Background="White" CornerRadius="12" Padding="30">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.1" 
                                          BlurRadius="15" ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="📋 Recent Activity" 
                                   FontSize="20" FontWeight="SemiBold" 
                                   Foreground="#333" Margin="0,0,0,20"/>

                        <!-- Recent Activity Items (Loaded Dynamically) -->
                        <ItemsControl x:Name="RecentActivityItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="0,15">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Background="{Binding IconBackground}" Width="40" Height="40" 
                                                    CornerRadius="20" Grid.Column="0">
                                                <TextBlock Text="{Binding Icon}" FontSize="20" 
                                                           HorizontalAlignment="Center" 
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <StackPanel Grid.Column="1" Margin="15,0">
                                                <TextBlock Text="{Binding Description}" 
                                                           FontWeight="SemiBold" FontSize="14"/>
                                                <TextBlock Text="{Binding TimeAgo}" 
                                                           Foreground="#999" FontSize="12" 
                                                           Margin="0,3,0,0"/>
                                            </StackPanel>
                                            <TextBlock Grid.Column="2" Text="{Binding DateLabel}" 
                                                       Foreground="{Binding DateColor}" FontSize="12" 
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
