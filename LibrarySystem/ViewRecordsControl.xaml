<UserControl x:Class="LibrarySystem.ViewRecordsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="White">
        <StackPanel Margin="50">
            <TextBlock Text="📋 View Records" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="#00796B" 
                       Margin="0,0,0,30"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <ComboBox x:Name="FilterComboBox" Width="200" Height="40" FontSize="16" Margin="0,0,10,0">
                    <ComboBoxItem Content="All Records" IsSelected="True"/>
                    <ComboBoxItem Content="Issue Records"/>
                    <ComboBoxItem Content="Return Records"/>
                </ComboBox>
                <DatePicker x:Name="FilterDatePicker" Width="200" Height="40" FontSize="16" Margin="0,0,10,0"/>
                <Button Content="Filter" 
                        Width="120" Height="40" 
                        Background="#00796B" 
                        Foreground="White" 
                        BorderThickness="0" 
                        FontSize="16"
                        Cursor="Hand"
                        Click="FilterButton_Click"/>
                <Button x:Name="ExportButton" Content="Export" 
                        Width="120" Height="40" 
                        Background="#0541A5" 
                        Foreground="White" 
                        BorderThickness="0" 
                        FontSize="16"
                        Margin="10,0,0,0"
                        Cursor="Hand"
                        Click="ExportButton_Click"/>
                <Button x:Name="ResetButton" Content="Reset" Width="90" Height="40" Margin="10,0,0,0" Click="ResetFiltersButton_Click"/>
            </StackPanel>

            <TextBlock Text="Transaction History" 
                       FontSize="20" 
                       FontWeight="SemiBold"
                       Foreground="#333"
                       Margin="0,20,0,10"/>

            <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="5">
                <DataGrid x:Name="RecordsDataGrid" Height="400" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          IsReadOnly="True"
                          GridLinesVisibility="None" 
                          Background="White"
                          AlternatingRowBackground="#F9F9F9"
                          HeadersVisibility="Column"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Transaction ID" Width="120" Binding="{Binding Id}"/>
                        <DataGridTextColumn Header="Student ID" Width="120" Binding="{Binding StudentId}"/>
                        <DataGridTextColumn Header="Book Title" Width="200" Binding="{Binding BookTitle}"/>
                        <DataGridTextColumn Header="Issue Date" Width="150" Binding="{Binding IssueDate, StringFormat=yyyy-MM-dd}"/>
                        <DataGridTextColumn Header="Due Date" Width="150" Binding="{Binding DueDate, StringFormat=yyyy-MM-dd}"/>
                        <DataGridTextColumn Header="Return Date" Width="150" Binding="{Binding ReturnDate, StringFormat=yyyy-MM-dd}"/>
                        <DataGridTextColumn Header="Status" Width="120" Binding="{Binding Status}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
