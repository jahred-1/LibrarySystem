<UserControl x:Class="LibrarySystem.StudentDashboardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F7FA">

    <UserControl.Resources>
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#1A000000" BlurRadius="8" ShadowDepth="0" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel>
            <!-- Welcome Header -->
            <Border Background="White" CornerRadius="16" Padding="32" Margin="0,0,0,24">
                <Border.Effect>
                    <DropShadowEffect Color="#1A000000" BlurRadius="8" ShadowDepth="0" Opacity="0.08"/>
                </Border.Effect>

                <!-- Use Grid to place welcome text on left and image on right -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="220" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Welcome back!" FontSize="32" FontWeight="Bold" 
                                   Foreground="#1E293B" Margin="0,0,0,8"/>
                        <TextBlock Text="Here's an overview of your library activity" 
                                   FontSize="15" Foreground="#64748B"/>

                    </StackPanel>

                    

                </Grid>

            </Border>

            <!-- Statistics Grid -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Books Borrowed -->
                <Border Grid.Column="0" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="📚" FontSize="32" Margin="0,0,0,12"/>
                        <TextBlock x:Name="BorrowedText" Text="0" FontSize="36" FontWeight="Bold" Foreground="#1E293B"/>
                        <TextBlock Text="Borrowed" FontSize="13" Foreground="#64748B" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Books Returned -->
                <Border Grid.Column="1" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="✅" FontSize="32" Margin="0,0,0,12"/>
                        <TextBlock x:Name="ReturnedText" Text="0" FontSize="36" FontWeight="Bold" Foreground="#1E293B"/>
                        <TextBlock Text="Returned" FontSize="13" Foreground="#64748B" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Reservations -->
                <Border Grid.Column="2" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="🔖" FontSize="32" Margin="0,0,0,12"/>
                        <TextBlock x:Name="ReservationsText" Text="0" FontSize="36" FontWeight="Bold" Foreground="#1E293B"/>
                        <TextBlock Text="Reservations" FontSize="13" Foreground="#64748B" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Due Soon -->
                <Border Grid.Column="3" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="⏰" FontSize="32" Margin="0,0,0,12"/>
                        <TextBlock x:Name="DueSoonText" Text="0" FontSize="36" FontWeight="Bold" Foreground="#EF4444"/>
                        <TextBlock Text="Due Soon" FontSize="13" Foreground="#64748B" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Recent Activity -->
            <Border Background="White" CornerRadius="16" Padding="24" Margin="0,0,0,24">
                <Border.Effect>
                    <DropShadowEffect Color="#1A000000" BlurRadius="8" ShadowDepth="0" Opacity="0.08"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Recent Activity" FontSize="20" FontWeight="Bold" 
                               Foreground="#1E293B" Margin="0,0,0,20"/>

                    <ItemsControl x:Name="RecentActivityItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F8FAFC" CornerRadius="10" Padding="16" Margin="0,0,0,12">
                                    <Grid>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Description}" FontSize="15" FontWeight="SemiBold" 
                                                       Foreground="#1E293B"/>
                                            <TextBlock Text="{Binding TimeAgo}" 
                                                       FontSize="13" Foreground="#64748B" Margin="0,4,0,0"/>
                                        </StackPanel>
                                        <Border Background="{Binding DateColor}" CornerRadius="6" Padding="8,4" 
                                                HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding DateLabel}" FontSize="11" Foreground="White" 
                                                       FontWeight="SemiBold"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Quick Actions -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Browse Books" Style="{StaticResource PrimaryButton}" 
                        Margin="0,0,8,0" Click="BrowseBooks_Click"/>
                <Button Grid.Column="1" Content="My Books" Background="#F1F5F9" 
                        Foreground="#475569" Margin="8,0,0,0"
                        BorderThickness="0" FontSize="14" FontWeight="SemiBold" Height="44" Cursor="Hand" Click="MyBooks_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E2E8F0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>